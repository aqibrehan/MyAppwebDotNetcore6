@using System.Globalization;
@model MyApp.Models.ViewModels.CartVM
@using Microsoft.Extensions.Options;
@inject IOptions<MyApp.CommonHelper.StripeSettings> Stripe
<form method="post">
<div class="row">
    <div class="col-md-8 mb-4">
        <div class="card mb-4">
            <div class="card-header py-3">
                <h5 class="mb-0">Shopping Details</h5>
            </div>
            <div class="card-body">
             
                    <div class="row mb-4">
                        <div class="col">
                            <div class="form-outline">
                                <label class="form-label" for="form7Example1">Name</label>
                                <input type="text" id="form7Example1" class="form-control" asp-for="@Model.orderHeader.Name" />
                       
                            </div>
                            <div class="form-outline">
                                <label class="form-label" for="form7Example1">Phone</label>
                                <input type="text" id="form7Example1" class="form-control" asp-for="@Model.orderHeader.Phone" />
                              
                            </div>
                            <div class="form-outline">
                                <label class="form-label" for="form7Example1">Address </label>
                                <textarea id="form7Example1" class="form-control" asp-for="@Model.orderHeader.Address"></textarea>
                           
                            </div>
                            <div class="form-outline">
                                <label class="form-label" for="form7Example1">City </label>
                                <input type="text" id="form7Example1" class="form-control" asp-for="@Model.orderHeader.City" />
                              
                            </div>
                            <div class="form-outline">
                                <label class="form-label" for="form7Example1">State</label>
                                <input type="text" id="form7Example1" class="form-control" asp-for="@Model.orderHeader.State" />
                          
                            </div>
                            <div class="form-outline">
                                <label class="form-label" for="form7Example1">PostalCode</label>
                                <input type="text" id="form7Example1" class="form-control" asp-for="@Model.orderHeader.PostalCode" />
                                
                            </div>
                        </div>
                     
                    </div>
                
            
            </div>
        </div>

    </div>
    <div class="col-md-4 mb-4">
        <div class="card mb-4">
            <div class="card-header py-3">
                <h5 class="mb-0">Summary</h5>
            </div>
            @foreach(var details in Model.ListofCart)
            {
            <div class="card-body">
                
                    <div class="row mb-4">
                        <div class="col">
                            <div class="form-outline">
                                <div class="col">
                                <label class="form-label" for="form7Example1">@details.Product.Name</label>

                                 <label class="form-label" for="form7Example1">QTY:@details.Count</label>
                                      
                                </div>
                                  
                                
                            </div>
                        </div>
                        <div class="col">
                            <div class="form-outline">
                                      <div class="col">
                                        @*<label class="form-label" for="form7Example1">@details.Product.Price.ToString("C", CultureInfo.CreateSpecificCulture("ur-PK"))</label>*@
                                        <label class="form-label" for="form7Example1">@(((details.Count) * details.Product.Price).ToString("c", CultureInfo.CreateSpecificCulture("ur-PK")))</label>
                                </div>
                           
                              
                            </div>
                        </div>
                        <hr />
                     

                   
                    </div>
                 
       
            </div>
            }
            <div class="col">
                <div class="form-outline">
                    <div class="col">
                        <h6 class="form-label" for="form7Example1">Total Amount</h6>
                    </div>
                    <div class="col">
                        <h6 class="form-label" for="form7Example1">(include VAT)</h6>
                    </div>
                    <div class="col">
                        <button type="submit" class="btn btn-primary">Make Purchase</button>
                    </div>

                </div>
            </div>
            <div class="col">
                <div class="form-outline">
                    <div class="col">
                        <h6 class="form-label" for="form7Example1">@Model.orderHeader.OrderTotal</h6>
                    </div>


                </div>
            </div>
        </div>


    </div>
</div>
</form>